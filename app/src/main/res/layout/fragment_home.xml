<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.salajim.musab.quotehub.fragments.HomeFragment">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:background="@color/colorPrimary"
        android:id="@+id/inspiration" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inspiration"
        android:layout_marginLeft="15dp"
        android:id="@+id/inspirationTextView"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:background="@color/green"
        android:layout_toRightOf="@+id/inspiration"
        android:id="@+id/life" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/life"
        android:layout_marginLeft="130dp"
        android:id="@+id/lifeTextView"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/life"
        android:background="@color/orange"
        android:id="@+id/love"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/love"
        android:layout_marginLeft="270dp"
        android:id="@+id/loveTextView"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:background="@color/red"
        android:id="@+id/funny"
        android:layout_below="@+id/inspiration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/funny"
        android:layout_marginLeft="15dp"
        android:id="@+id/funnyTextView"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:background="@color/colorAccent"
        android:id="@+id/positve"
        android:layout_below="@+id/life"
        android:layout_toRightOf="@+id/lifeTextView"
        android:layout_toEndOf="@+id/lifeTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/positve"
        android:layout_marginLeft="130dp"
        android:id="@+id/positiveTextView"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_below="@+id/love"
        android:layout_toRightOf="@+id/positve"
        android:background="@color/cyan"
        android:id="@+id/wisdom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wisdom"
        android:layout_marginLeft="270dp"
        android:id="@+id/wisdomTextView" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_below="@+id/funny"
        android:background="@color/purple"
        android:id="@+id/motivation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/motivation"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_below="@+id/positve"
        android:layout_toRightOf="@+id/motivation"
        android:background="@color/sky"
        android:id="@+id/money"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/money"
        android:layout_marginLeft="130dp"
        android:id="@+id/moneyTextView"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_below="@+id/wisdom"
        android:layout_toRightOf="@+id/money"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/happiness"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/money"
        android:layout_marginLeft="270dp"
        android:id="@+id/happinessTextView"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:background="@color/yellow"
        android:layout_below="@+id/happiness"
        android:id="@+id/success"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/success"
        android:layout_marginLeft="15dp"
        android:id="@+id/successTextView"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_below="@+id/happiness"
        android:layout_toRightOf="@+id/success"
        android:background="@color/redishP"
        android:id="@+id/hope"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hope"
        android:layout_marginLeft="130dp"
        android:id="@+id/hopeTextView"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_below="@+id/money"
        android:layout_toRightOf="@+id/hope"
        android:background="@color/darkB"
        android:id="@+id/friendship"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friendship"
        android:layout_marginLeft="270dp"/>

</RelativeLayout>
